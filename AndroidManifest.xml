<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gsa.muk.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock" >
        <activity
            android:name="gsa.muk.app.DashboardActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="gsa.muk.app.AboutActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="gsa.muk.app.AboutActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="gsa.muk.app.NewsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="gsa.muk.app.NewsActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="gsa.muk.app.EventsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="gsa.muk.app.EventsActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="gsa.muk.app.WebViewActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="gsa.muk.app.WebViewActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service android:name="gsa.muk.app.service.NewsRssService" />
        <service android:name="gsa.muk.app.service.EventsRssService" />
    </application>

</manifest>